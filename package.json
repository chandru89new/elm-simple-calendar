{
  "name": "elm-simple-calendar",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "watch": "nodemon -e elm,html -x 'yarn dev-build-css && yarn dev-build-elm'",
    "dev-build-elm": "elm make src/Main.elm --output main.js",
    "dev-build-css": "tailwind -i src/style.css -o style.css",
    "serve": "http-server -p 5000"
  },
  "dependencies": {
    "elm": "^0.19.1-5",
    "http-server": "^14.1.1",
    "nodemon": "^3.0.1",
    "tailwindcss": "^3.3.3"
  }
}
